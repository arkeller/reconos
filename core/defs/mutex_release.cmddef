COMMAND reconos_mutex_release

    SYMBOL      OSIF_CMD_MUTEX_RELEASE
    ENCODING    0x03
    TYPE        TASK2OS
    # NO OPTIONS


    DELEGATE ecos_ecos
        HOST_OS             ecos
        RESTYPE             CYG_MUTEX_T
        HEADER              <cyg/kernel/kapi.h>
        HEADER              <cyg/infra/cyg_type.h>
        CODE                "cyg_mutex_release((cyg_mutex_t *)$resources[$data].ptr);"
    END # ecos.ecos


END # reconos_mutex_release
